{
    "name": "cis/payroll",
    "description": "CIS Payroll Module with Xero Integration",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "tecnickcom/tcpdf": "^6.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/php-code-coverage": "^9.2",
        "sebastian/phpcov": "^8.2",
        "brianium/paratest": "^6.11",
        "infection/infection": "^0.27",
        "vimeo/psalm": "^5.18"
    },
    "autoload": {
        "psr-4": {
            "CIS\\Payroll\\": "lib/",
            "HumanResources\\Payroll\\": "."
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HumanResources\\Payroll\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true
    }
}
