# ============================================================================
# CIS Consignments Module - Environment Configuration Template
# ============================================================================
#
# SECURITY NOTICE:
# - Copy this file to .env and fill in real values
# - NEVER commit .env to git (already in .gitignore)
# - Rotate credentials quarterly or after suspected compromise
# - Use strong passwords (16+ chars, mixed case, numbers, symbols)
#
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DB_HOST=localhost
DB_NAME=jcepnzzkmj
DB_USER=jcepnzzkmj
DB_PASS=your_secure_password_here

# Read-only replica (optional, falls back to DB_HOST if not set)
#DB_HOST_RO=localhost

# ----------------------------------------------------------------------------
# Lightspeed API Configuration
# ----------------------------------------------------------------------------
# Get your API token from: https://vapeshed.retail.lightspeed.app/app/2.0/settings/integrations
LS_API_TOKEN=your_lightspeed_api_token_here
LS_BASE_URL=https://vapeshed.retail.lightspeed.app/api/2.0
LS_WEBHOOK_SECRET=your_webhook_secret_here

# ----------------------------------------------------------------------------
# Queue Worker Configuration
# ----------------------------------------------------------------------------
QUEUE_CONCURRENCY=4
QUEUE_BACKOFF_BASE_MS=200
QUEUE_MAX_ATTEMPTS=3

# ----------------------------------------------------------------------------
# Transfer Manager Security
# ----------------------------------------------------------------------------
# PIN code for Transfer Manager API authentication
# Change this to a strong random value
TRANSFER_MANAGER_PIN=your_secure_pin_here

# ----------------------------------------------------------------------------
# Application Environment
# ----------------------------------------------------------------------------
APP_ENV=production
APP_DEBUG=false

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# ----------------------------------------------------------------------------
# CSRF Configuration
# ----------------------------------------------------------------------------
CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_LENGTH=32

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_PATH=/home/master/applications/jcepnzzkmj/public_html/logs

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
FEATURE_QUEUE_WORKER=true
FEATURE_WEBHOOKS=true
FEATURE_AI_INSIGHTS=true

# ----------------------------------------------------------------------------
# External Services (optional)
# ----------------------------------------------------------------------------
#FREIGHT_API_KEY=
#FREIGHT_API_SECRET=

# ============================================================================
# AI AGENT INTEGRATION - Universal AI Bot Configuration
# ============================================================================
# Supports: OpenAI GPT-4, Anthropic Claude, or Custom AI Agent
# Enable AI-powered recommendations, chat assistant, and automation
# ============================================================================

# ----------------------------------------------------------------------------
# AI Agent Provider Selection
# ----------------------------------------------------------------------------
# Options: 'openai', 'anthropic', 'custom'
AI_AGENT_PROVIDER=openai

# ----------------------------------------------------------------------------
# AI Model Selection
# ----------------------------------------------------------------------------
# OpenAI models: gpt-4o, gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Anthropic models: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# Custom: your-model-name
AI_AGENT_MODEL=gpt-4o

# ----------------------------------------------------------------------------
# API Authentication
# ----------------------------------------------------------------------------
# OpenAI: Get from https://platform.openai.com/api-keys
# Anthropic: Get from https://console.anthropic.com/
# Custom: Your agent's API key
AI_AGENT_API_KEY=your_ai_api_key_here

# Custom agent endpoint (only needed if AI_AGENT_PROVIDER=custom)
#AI_AGENT_ENDPOINT=https://your-ai-agent.com/api/v1/chat

# ----------------------------------------------------------------------------
# AI Agent Performance & Limits
# ----------------------------------------------------------------------------
# Request timeout in seconds
AI_AGENT_TIMEOUT=30

# Maximum tokens per request (controls response length & cost)
AI_AGENT_MAX_TOKENS=2000

# Temperature (0.0-1.0, lower = more focused, higher = more creative)
AI_AGENT_TEMPERATURE=0.3

# ----------------------------------------------------------------------------
# AI Agent Features
# ----------------------------------------------------------------------------
# Enable response caching (15 min TTL, reduces API calls)
AI_AGENT_CACHE_ENABLED=true

# Enable fallback to local AIService if remote fails
AI_AGENT_FALLBACK_ENABLED=true

# Enable rate limiting (protects against excessive API costs)
AI_AGENT_RATE_LIMIT_ENABLED=true

# Requests per hour limit (adjust based on your API plan)
AI_AGENT_RATE_LIMIT_HOURLY=100

# Enable conversation memory (maintains context across messages)
AI_AGENT_MEMORY_ENABLED=true

# Enable function calling (AI can trigger CIS actions)
AI_AGENT_FUNCTION_CALLING_ENABLED=false

# ----------------------------------------------------------------------------
# AI Cost Tracking
# ----------------------------------------------------------------------------
# Cost per 1K tokens (update based on your provider's pricing)
# OpenAI GPT-4o: ~$0.005/1K input, ~$0.015/1K output
# Anthropic Claude 3.5: ~$0.003/1K input, ~$0.015/1K output
AI_AGENT_COST_PER_1K_INPUT_TOKENS=0.005
AI_AGENT_COST_PER_1K_OUTPUT_TOKENS=0.015

# Monthly budget alert threshold (USD)
AI_AGENT_MONTHLY_BUDGET_USD=100

# ----------------------------------------------------------------------------
# AI Agent UI Features
# ----------------------------------------------------------------------------
# Enable AI chat widget in Transfer Manager
AI_AGENT_CHAT_WIDGET_ENABLED=true

# Enable real-time recommendations in UI
AI_AGENT_REALTIME_RECOMMENDATIONS=true

# Enable voice input (requires browser support)
AI_AGENT_VOICE_INPUT_ENABLED=false

# ----------------------------------------------------------------------------
# AI Agent Logging & Debugging
# ----------------------------------------------------------------------------
# Log all AI interactions to cis_ai_context
AI_AGENT_LOGGING_ENABLED=true

# Log detailed request/response for debugging
AI_AGENT_DEBUG_LOGGING=false

# Save all conversations to ai_agent_conversations table
AI_AGENT_SAVE_CONVERSATIONS=true

# ============================================================================
# End of AI Agent Configuration
# ============================================================================
