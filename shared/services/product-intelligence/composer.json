{
  "name": "cis/product-intelligence",
  "description": "Ultra-Sophisticated Product Intelligence System for SKU-less matching, multi-strategy extraction, and competitive intelligence",
  "type": "library",
  "version": "3.0.0",
  "require": {
    "php": ">=8.1",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-dom": "*",
    "guzzlehttp/guzzle": "^7.8",
    "predis/predis": "^2.2",
    "monolog/monolog": "^3.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "CIS\\SharedServices\\ProductIntelligence\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CIS\\SharedServices\\ProductIntelligence\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpstan": "phpstan analyse src/ --level=7"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
