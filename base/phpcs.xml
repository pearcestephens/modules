<?xml version="1.0"?>
<ruleset name="CIS Base Module Coding Standard">
    <description>PSR-12 coding standard for CIS Base Module</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>src/</file>
    <file>public/</file>

    <!-- Exclude vendor and cache directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/cache/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Allow long lines (URLs, etc) -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>
