# E-Commerce Operations Module - Environment Configuration
# Copy this file to .env and configure your settings

# Database
DB_HOST=localhost
DB_NAME=your_database
DB_USER=your_user
DB_PASS=your_password

# Burst SMS Configuration
BURST_SMS_API_KEY=your_burst_api_key
BURST_SMS_SENDER=VapeShed

# Email Configuration (uses existing vapeshedSendEmail)
EMAIL_FROM=orders@vapeshed.co.nz
EMAIL_FROM_NAME="The Vape Shed"

# Age Verification
AGE_VERIFICATION_ENABLED=true
AGE_VERIFICATION_EXPIRY_DAYS=7
AGE_VERIFICATION_AI_ENABLED=true
AGE_VERIFICATION_STORAGE_PATH=/secure/id-photos/

# Freight Configuration (uses existing per-outlet credentials from vend_outlets)
FREIGHT_DEFAULT_COURIER=gss
FREIGHT_AUTO_SELECT_CHEAPEST=true

# Module Settings
MODULE_NAME=E-Commerce Operations
MODULE_VERSION=1.0.0
DEBUG_MODE=false
