{
    "name": "cis/crawler-service",
    "description": "Ultra-Sophisticated Web Crawler Service with ML/AI, Anti-Detection, and Enterprise Patterns",
    "type": "library",
    "version": "2.0.0",
    "license": "proprietary",
    "authors": [
        {
            "name": "Ecigdis Limited",
            "email": "dev@ecigdis.co.nz"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/event-dispatcher": "^6.4",
        "symfony/cache": "^6.4",
        "predis/predis": "^2.2",
        "php-ml/php-ml": "^0.10",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.5",
        "psr/log": "^3.0",
        "psr/cache": "^3.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "CIS\\SharedServices\\Crawler\\": "src/",
            "CIS\\SharedServices\\Crawler\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CIS\\SharedServices\\Crawler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "phpcbf src tests --standard=PSR12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
