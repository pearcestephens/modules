<?xml version="1.0"?>
<ruleset name="CIS Modules Coding Standard">
    <description>Enterprise PSR-12 coding standard with project-specific exclusions.</description>

    <file>app</file>
    <file>admin</file>
    <file>config</file>
    <file>public</file>
    <file>resources</file>
    <file>tools</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>public/assets/*</exclude-pattern>

    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.IncorrectOrder"/>
    </rule>

    <config name="report_width" value="120"/>
</ruleset>
